<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Styles.Resources>
        <!-- Spacing Constants -->
        <x:Double x:Key="SpacingTiny">4</x:Double>
        <x:Double x:Key="SpacingSmall">8</x:Double>
        <x:Double x:Key="SpacingMedium">12</x:Double>
        <x:Double x:Key="SpacingLarge">20</x:Double>

        <!-- Padding Constants -->
        <Thickness x:Key="PaddingSmall">8,6</Thickness>
        <Thickness x:Key="PaddingMedium">12,8</Thickness>
        <Thickness x:Key="PaddingLarge">16,12</Thickness>
        <Thickness x:Key="PaddingCard">8</Thickness>

        <!-- Margin Constants -->
        <Thickness x:Key="MarginSmall">0,4</Thickness>
        <Thickness x:Key="MarginMedium">0,8</Thickness>
        <Thickness x:Key="MarginContainer">10</Thickness>
        <Thickness x:Key="MarginBottom">0,0,0,20</Thickness>
        <Thickness x:Key="MarginBottomMedium">0,0,0,12</Thickness>
        <Thickness x:Key="MarginBottomSmall">0,0,0,8</Thickness>
        <Thickness x:Key="MarginBottomTiny">0,0,0,4</Thickness>
        <Thickness x:Key="MarginTop">0,20,0,0</Thickness>
        <Thickness x:Key="MarginTopMedium">0,12,0,0</Thickness>
        <Thickness x:Key="MarginTopSmall">0,8,0,0</Thickness>
        <Thickness x:Key="MarginTopTiny">0,4,0,0</Thickness>
        <Thickness x:Key="MarginVerticalSmall">0,8,0,8</Thickness>
        <Thickness x:Key="MarginVerticalTiny">0,4,0,4</Thickness>

        <!-- Font Sizes -->
        <x:Double x:Key="FontSizeSmall">10</x:Double>
        <x:Double x:Key="FontSizeMedium">13</x:Double>
        <x:Double x:Key="FontSizeLarge">16</x:Double>
        <x:Double x:Key="FontSizeTitle">18</x:Double>
        <x:Double x:Key="FontSizeLabel">11</x:Double>

        <!-- Border Constants -->
        <Thickness x:Key="BorderThicknessValue">1</Thickness>
        <CornerRadius x:Key="BorderRadius">4</CornerRadius>
    </Styles.Resources>

    <!-- Base Button Style -->
    <Style Selector="Button.MenuButton">
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="Padding" Value="{StaticResource PaddingMedium}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeLarge}"/>
    </Style>

    <!-- Selected Menu Button Border -->
    <Style Selector="Border.SelectedMenuBorder">
        <Setter Property="BorderBrush" Value="{DynamicResource SystemAccentColor}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="CornerRadius" Value="{StaticResource BorderRadius}"/>
    </Style>

    <!-- Small Button Style -->
    <Style Selector="Button.SmallButton">
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="Padding" Value="{StaticResource PaddingSmall}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeMedium}"/>
    </Style>

    <!-- Stats Card Style -->
    <Style Selector="Border.StatsCard">
        <Setter Property="BorderBrush" Value="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
        <Setter Property="BorderThickness" Value="{StaticResource BorderThicknessValue}"/>
        <Setter Property="CornerRadius" Value="{StaticResource BorderRadius}"/>
        <Setter Property="Padding" Value="{StaticResource PaddingCard}"/>
        <Setter Property="Margin" Value="{StaticResource MarginSmall}"/>
    </Style>

    <!-- Label Text Style -->
    <Style Selector="TextBlock.Label">
        <Setter Property="FontSize" Value="{StaticResource FontSizeLabel}"/>
        <Setter Property="Opacity" Value="0.7"/>
    </Style>

    <!-- Value Text Style -->
    <Style Selector="TextBlock.Value">
        <Setter Property="FontSize" Value="{StaticResource FontSizeLarge}"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <!-- Title Text Style -->
    <Style Selector="TextBlock.Title">
        <Setter Property="FontSize" Value="{StaticResource FontSizeTitle}"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

</Styles>
