<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:D2.UI.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="800"
             x:Class="D2.UI.Views.AboutView"
             x:DataType="vm:AboutViewModel">

    <StackPanel HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                Spacing="{StaticResource SpacingSmall}"
                Margin="{StaticResource MarginContainer}">
        <TextBlock Text="About"
                   Classes="Title"
                   Margin="{StaticResource MarginBottom}"/>

        <TextBlock Text="{Binding Version}"
                   FontSize="{StaticResource FontSizeLarge}"
                   HorizontalAlignment="Center"
                   Margin="{StaticResource MarginBottomSmall}"/>

        <TextBlock Text="{Binding GitHubUrl}"
                   FontSize="{StaticResource FontSizeMedium}"
                   HorizontalAlignment="Center"
                   Margin="{StaticResource MarginBottom}"/>

        <Button Content="Back"
                Command="{Binding BackCommand}"
                Classes="MenuButton"/>
    </StackPanel>

</UserControl>
